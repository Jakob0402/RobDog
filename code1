// ----- ANIMATIONEN ----- Hier werden die Animationen erstellt.
void showBitmap(const unsigned char *bmp) {
  display.clearDisplay();
  display.drawBitmap(16, 8, bmp, 96, 43, 1);
  display.display();
}

void blinkBasic() {
  showBitmap(logo_open_bmp);
  delay(1000);
  showBitmap(logo_close_bmp);
  delay(125);
}

void cold() {
  display.clearDisplay();
  display.drawBitmap(10, 2, logo_open_bmp, 96, 43, 1);
  display.display();
  delay(1000);

  display.clearDisplay();
  display.drawBitmap(22, 12, logo_close_bmp, 96, 43, 1);
  display.display();
  delay(125);
}

void openblink() {
  showBitmap(logo_openopen_bmp);
  delay(1000);
  showBitmap(logo_closeopen_bmp);
  delay(125);
}

void blub() {
  showBitmap(logo_openblub_bmp);
  delay(1000);
  showBitmap(logo_closeblub_bmp);
  delay(125);
}


// ----- SETUP ----- Hier startet der eigentiche Code.
void setup() {
  Serial.begin(9600);
  delay(200); 

  display.begin(i2c_Address, true);
  display.clearDisplay();

  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  pinMode(touchPin, INPUT);

  dht.begin();
}


// ----- LOOP ----- Hier werden die Animationen angezeigt.
void loop() {
  
  // --- Abstand messen ---
  digitalWrite(trigPin, LOW);
  delayMicroseconds(4);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);

  duration = pulseIn(echoPin, HIGH, 25000);
  distance = duration * 0.034 / 2;

  int touchState = digitalRead(touchPin);

  // ---- AUSLÃ–SEBEDINGUNGEN ----
  if (distance < 10 || touchState == HIGH) {

    if (touchState == HIGH) {
      openblink();
    } else {
      blub();
    }

    return;
  }

  // ---- Normale Anzeige: Temperatur & Luftfeuchtigkeit ----
  float h = dht.readHumidity();
  float t = dht.readTemperature();

  if (isnan(h) || isnan(t)) {
    display.clearDisplay();
    display.setCursor(0, 0);
    display.println("Fehler beim");
    display.println("DHT-Sensor!");
    display.display();
    return;
  }

  // Temperatureffekt
  if (t < 15) {
    cold();
    return;
  }
  display.display();

  delay(300);
}
